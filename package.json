  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.53.0",
    "@types/node": "^22.14.1",
    "allure-commandline": "^2.34.0",
    "allure-cucumberjs": "^3.3.0",
    "allure-js-commons": "^3.2.2",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
